<h2>Lista de categorias</h2>
<hr>
<a href="/admin/categorias/add"><button class="btn btn-success">Nova Categoria</button></a>

{{#each categorias}}
   <div class="card mt-4">
    <div class="card-body">
        <h3>{{nome}}</h3>
        <small>Slug: {{slug}}</small> <br>
        <small>Data de criação: {{date}}</small> <br>
        <a href="/admin/categorias/edit/{{_id}}"><button class="btn btn-success mt-3">Editar Categoria</button></a>
        <form  method="post" action="/admin/categorias/deletar">
            <input type="hidden" name="id" value="{{_id}}">
            <button type="submit" class="btn btn-danger mt-2">Deletar Categoria</button>
        </form>    
    </div>
    </div>
{{else}}
    <h4 class="mt-3">Nenhuma categoria registrada.</h4>
{{/each}}